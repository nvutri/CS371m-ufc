<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/custom_layout_row_padding_bottom" >

    <!-- Result -->

    <TextView
        android:id="@+id/comparison_fight_result_1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="left"
        android:text="@string/result"
        android:textSize="@dimen/fight_history_text_size" />

    <!-- Opponent -->

    <TextView
        android:id="@+id/comparison_fight_opponent"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:text="@string/opponent"
        android:textSize="@dimen/fight_history_text_size"
        android:textStyle="bold" />

    <!-- Result -->

    <TextView
        android:id="@+id/comparison_fight_result_2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:text="@string/result"
        android:textSize="@dimen/fight_history_text_size" />

</LinearLayout>